<div>
	<% if @user.errors.any? %>
		<h3>Edits were not saved due to the following errors:</h3>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      Username: <%= f.text_field :username, class: 'form-control' %><br />
      Email : <%= f.email_field :email , class: 'form-control' %><br />
      Password : <%= f.password_field :password , class: 'form-control'%><br />
      <%= f.submit "Create New User", class: "btn btn-lg btn-primary"%>
    <% end %>
  </div>
</div>